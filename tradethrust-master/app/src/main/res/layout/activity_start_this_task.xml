<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:id="@+id/start_this_task_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start This Task"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:background="@color/black"
        android:paddingTop="@dimen/signin_btn_padding_top"
        android:paddingBottom="@dimen/signin_btn_padding_bottom"
        android:layout_marginRight="@dimen/signin_btn_margin_right"
        android:layout_marginLeft="@dimen/signin_btn_margin_left"/>

</LinearLayout>